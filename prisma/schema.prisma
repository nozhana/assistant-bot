generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                Int            @id @map("_id")
  firstName         String
  assistants        Assistant[]
  conversations     Conversation[]
  messages          Message[]
  guestAssistantIds String[]       @db.ObjectId
  guestAssistants   Assistant[]    @relation("guests", fields: [guestAssistantIds], references: [id])

  @@map("users")
}

model Assistant {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  serversideId  String         @unique
  name          String
  instructions  String?
  userId        Int
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  guestIds      Int[]
  guests        User[]         @relation("guests", fields: [guestIds], references: [id])
  conversations Conversation[]
  messages      Message[]

  @@map("assistants")
}

model Conversation {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String?
  userId      Int
  assistantId String    @db.ObjectId
  messages    Message[]
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  assistant   Assistant @relation(fields: [assistantId], references: [id], onDelete: Cascade)

  @@map("conversations")
}

model Message {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  userId         Int
  assistantId    String       @db.ObjectId
  role           Role
  content        String
  tokens         Int
  conversationId String       @db.ObjectId
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  assistant      Assistant    @relation(fields: [assistantId], references: [id], onDelete: Cascade)

  @@map("messages")
}

enum Role {
  USER
  ASSISTANT
}
